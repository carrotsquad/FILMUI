<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_city_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4efef"
    tools:context="com.example.teamwork.filmui.homepagepackage.CitySearchActivity">
    <RelativeLayout
        android:id="@+id/test444"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/close_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2b2929"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:text="关闭"/>
        <TextView
            android:text="选择城市"
            android:textColor="#2b2929"
            android:textSize="20sp"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="0px"
        android:layout_height="0px" />
    <AutoCompleteTextView
        android:completionThreshold="1"
        android:singleLine="true"
        android:paddingBottom="15dp"
        android:textSize="15sp"
        android:layout_below="@id/test444"
        android:id="@+id/search_edittext"
        android:hint="输入城市名或拼音"
        android:textColor="#191717"
        android:textColorHint="#7c7171"
        android:background="#fff"
        android:padding="8dp"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/search6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    </AutoCompleteTextView>
    <ListView
        android:layout_below="@id/search_edittext"
        android:id="@+id/search_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <com.example.teamwork.filmui.homepagepackage.IndexView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/search_edittext"
        android:id="@+id/indexview"
        android:layout_width="30dp"
        android:background="#00000000"
        android:layout_alignParentRight="true"
        android:layout_height="match_parent" />

</RelativeLayout>
